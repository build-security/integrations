{
    "index_patterns": [
        "idp"
    ],
    "template": {
        "mappings": {
            "date_detection": true,
            "properties": {
                "@timestamp": {
                    "type": "date"
                },
                "score": {
                    "type": "float"
                },
                "total_findings": {
                    "type": "long"
                },
                "passed.passed_counter": {
                    "type": "long"
                },
                "failed.failed_counter": {
                    "type": "long"
                },
                "agent.id": {
                    "type": "text",
                    "fields": {
                        "keyword": {
                            "ignore_above": 1024,
                            "type": "keyword"
                        }
                    }
                },
                "rule.benchmark.name": {
                    "type": "text",
                    "fields": {
                        "keyword": {
                            "ignore_above": 1024,
                            "type": "keyword"
                        }
                    }
                }
            }
        }
    }
}