{
    "description": "Defines findings transformation to view only the latest and greatest",
    "dest": {
        "index": ".csp-findings-latest"
    },
    "frequency": "5m",
    "source": {
        "index": "cis_kubernetes_benchmark.findings-*"
    },
    "latest": {
        "sort": "@timestamp",
        "unique_key": [
            "resource.filename.keyword",
            "rule.name",
            "agent.id"
        ]
    },
    "retention_policy": {
        "time": {
            "field": "@timestamp",
            "max_age": "1h"
        }
    },
    "sync": {
        "time": {
            "field": "@timestamp",
            "delay": "60s"
        }
    }
}