{
    "description": "Defines findings transformation to view only the latest and greatest",
    "dest": {
        "index": "cloud_security_posture-findings_latest"
    },
    "frequency": "5m",
    "source": {
        "index": "logs-cis_kubernetes_benchmark.findings-*"
    },
    "latest": {
        "sort": "@timestamp",
        "unique_key": [
            "resource_id.keyword",
            "rule.name.keyword",
            "agent.id.keyword"
        ]
    },
    "retention_policy": {
        "time": {
            "field": "@timestamp",
            "max_age": "1h"
        }
    },
    "sync": {
        "time": {
            "field": "@timestamp",
            "delay": "60s"
        }
    }
}