{
    "description": "Defines findings transformation to view only the latest and greatest",
    "dest": {
        "index": "logs-k8s_cis.latest"
    },
    "frequency": "5m",
    "source": {
        "index": "logs-k8s_cis.result*"
    },
    "latest": {
        "sort": "@timestamp",
        "unique_key": [
            "resource.keyword",
            "rule.keyword",
            "agent.keyword"
        ]
    },
    "retention_policy": {
        "time": {
            "field": "@timestamp",
            "max_age": "1h"
        }
    },
    "sync": {
        "time": {
            "field": "@timestamp",
            "delay": "60s"
        }
    }
}